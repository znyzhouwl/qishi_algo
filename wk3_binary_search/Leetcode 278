class Solution:
    def firstBadVersion(self, n):
        """
        :type n: int
        :rtype: int
        """
        l,r = 1, n
        mid = (l + r) // 2
        while l < r - 1:
            if isBadVersion(mid):
                r = mid
            else:
                l = mid + 1
            mid = (l + r) //2
        if isBadVersion(l):
            return l 
        return r
